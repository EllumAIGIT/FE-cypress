# üåç Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# üöÄ APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
CYPRESS_BASE_URL=https://app.ellum.ai
CYPRESS_API_URL=https://api.ellum.ai

# =============================================================================
# üë§ TEST USER CREDENTIALS
# =============================================================================
CYPRESS_USER_EMAIL=your-test-email@example.com
CYPRESS_USER_PASSWORD=your-test-password
CYPRESS_ADMIN_EMAIL=admin@example.com
CYPRESS_ADMIN_PASSWORD=admin-password

# =============================================================================
# üîí SECURITY & AUTHENTICATION
# =============================================================================
CYPRESS_API_KEY=your-api-key-here
CYPRESS_JWT_TOKEN=your-jwt-token-here
CYPRESS_SESSION_COOKIE=your-session-cookie

# =============================================================================
# üß™ TESTING CONFIGURATION
# =============================================================================
CYPRESS_HEADLESS=true
CYPRESS_VIDEO=true
CYPRESS_SCREENSHOTS=true
CYPRESS_RETRIES=2
CYPRESS_TIMEOUT=10000

# =============================================================================
# üåê BROWSER CONFIGURATION
# =============================================================================
CYPRESS_BROWSER=chrome
CYPRESS_VIEWPORT_WIDTH=1920
CYPRESS_VIEWPORT_HEIGHT=1080
CYPRESS_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# =============================================================================
# üìä PERFORMANCE & MONITORING
# =============================================================================
CYPRESS_PERFORMANCE_BUDGET=3000
CYPRESS_LIGHTHOUSE_SCORE=0.8
CYPRESS_LOAD_TIMEOUT=30000

# =============================================================================
# üîó EXTERNAL SERVICES
# =============================================================================
CYPRESS_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
CYPRESS_TEAMS_WEBHOOK=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK
CYPRESS_EMAIL_SMTP=smtp.gmail.com:587

# =============================================================================
# üìÅ FILE PATHS & STORAGE
# =============================================================================
CYPRESS_DOWNLOADS_FOLDER=cypress/downloads
CYPRESS_SCREENSHOTS_FOLDER=cypress/screenshots
CYPRESS_VIDEOS_FOLDER=cypress/videos
CYPRESS_REPORTS_FOLDER=cypress/reports

# =============================================================================
# üöÄ CI/CD CONFIGURATION
# =============================================================================
CI=true
GITHUB_ACTIONS=true
GITHUB_TOKEN=${GITHUB_TOKEN}
GITHUB_SHA=${GITHUB_SHA}
GITHUB_REF=${GITHUB_REF}

# =============================================================================
# üîç DEBUGGING & LOGGING
# =============================================================================
DEBUG=cypress:*
CYPRESS_LOG_LEVEL=info
CYPRESS_VERBOSE=true

# =============================================================================
# üåç ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================

# Development Environment
if [ "$NODE_ENV" = "development" ]; then
  CYPRESS_BASE_URL=http://localhost:3000
  CYPRESS_API_URL=http://localhost:8000
  CYPRESS_HEADLESS=false
  CYPRESS_VIDEO=false
fi

# Staging Environment
if [ "$NODE_ENV" = "staging" ]; then
  CYPRESS_BASE_URL=https://staging.ellum.ai
  CYPRESS_API_URL=https://staging-api.ellum.ai
  CYPRESS_HEADLESS=true
  CYPRESS_VIDEO=true
fi

# Production Environment
if [ "$NODE_ENV" = "production" ]; then
  CYPRESS_BASE_URL=https://app.ellum.ai
  CYPRESS_API_URL=https://api.ellum.ai
  CYPRESS_HEADLESS=true
  CYPRESS_VIDEO=true
  CYPRESS_RETRIES=3
fi

# =============================================================================
